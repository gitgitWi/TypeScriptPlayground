{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": false,
    "importsNotUsedAsValues": "remove",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
  },
  "include": ["./"],
  "exclude": ["./dist"]
}
