{
  "name": "db-repositories",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "source": "src/index.ts",
  "type": "module",
  "exports": {
    "require": "./dist/db-repositories.cjs",
    "import": "./dist/db-repositories.modern.js"
  },
  "main": "./dist/db-repositories.umd.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "microbundle --external nodemon,concurrently build src/index.ts",
    "build:watch": "microbundle watch src/index.ts",
    "start": "node ./dist/db-repositories.cjs",
    "serve": "concurrently -k \"yarn build:watch\" \"nodemon ./dist/db-repositories.cjs\""
  },
  "devDependencies": {
    "concurrently": "^7.1.0",
    "microbundle": "^0.15.0",
    "nodemon": "^2.0.16"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.5.0",
    "better-sqlite3": "^7.5.1",
    "typescript": "^4.6.4"
  }
}
